<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".Mainactivity">



    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <FrameLayout
        android:layout_width="196dp"
        android:layout_height="169dp"
        android:fitsSystemWindows="true"
        android:layout_gravity="left|top">
        android:orientation="vertical"

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#0099cc"
            android:orientation="vertical"
            tools:ignore="UselessParent">



        </LinearLayout>

        <ImageButton
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:id="@+id/imageButton1"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_account_box_black_48dp"
            android:background="#00ffffff"
            android:clickable="true"
            android:saveEnabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="驾驶者"
            android:id="@+id/textView"
            android:layout_gravity="bottom|center"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="196dp"
        android:layout_height="169dp"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal|top" >

        <LinearLayout
            style="?metaButtonBarStyle"
            tools:ignore="UselessParent"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal" />

        <ImageButton
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_music_video_black_48dp"
            android:background="#00ffffff"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MP3"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="196dp"
        android:layout_height="169dp"
        android:fitsSystemWindows="true"
        android:layout_gravity="right|top" >

        <LinearLayout
            style="?metaButtonBarStyle"
            tools:ignore="UselessParent"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#0099cc"
            android:orientation="horizontal" />

        <ImageButton
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:id="@+id/imageButton3"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_radio_black_48dp"
            android:background="#00ffffff"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="收音机"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="196dp"
        android:layout_height="169dp"
        android:fitsSystemWindows="true"
        android:layout_gravity="left|bottom" >

        <LinearLayout
            style="?metaButtonBarStyle"
            tools:ignore="UselessParent"
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal" />

        <ImageButton
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:id="@+id/imageButton4"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_map_black_48dp"
            android:background="#00ffffff"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="导航"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="196dp"
        android:layout_height="169dp"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal|bottom" >

        <LinearLayout
            style="?metaButtonBarStyle"
            tools:ignore="UselessParent"
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#0099cc"
            android:orientation="horizontal" />

        <ImageButton
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:id="@+id/imageButton5"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_directions_car_black_48dp"
            android:background="#00ffffff"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="汽车设置"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            android:layout_gravity="center_horizontal|bottom">
        </com.google.android.gms.ads.AdView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="196dp"
        android:layout_height="169dp"
        android:fitsSystemWindows="true"
        android:layout_gravity="right|bottom" >

        <LinearLayout
            style="?metaButtonBarStyle"
            tools:ignore="UselessParent"
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#0099cc"
            android:orientation="horizontal" />

        <ImageButton
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:id="@+id/imageButton6"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_build_black_48dp"
            android:background="#00ffffff"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="系统设置"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal" />
    </FrameLayout>

</FrameLayout>
