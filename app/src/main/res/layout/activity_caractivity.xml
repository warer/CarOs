<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="me.warer.caros.Caractivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal|top">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:overScrollMode="ifContentScrolls">



        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_gravity="left|top"
            android:weightSum="0">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="驾驶模式："
                android:id="@+id/textView7"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/radiogroup1"
                android:layout_weight="5"
                android:baselineAligned="true"
                android:textAlignment="textEnd"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:text="经济"
                    android:id="@+id/radioButton41"
                    android:layout_weight="0.24"
                    android:checked="false"
                    android:textSize="35dip"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:clickable="true" />

                <RadioButton
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:id="@+id/radioButton42"
                    android:layout_weight="0.29"
                    android:checked="false"
                    android:text="舒适"
                    android:textSize="35dip"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:clickable="true" />

                <RadioButton
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:text="运动"
                    android:id="@+id/radioButton43"
                    android:layout_weight="0.28"
                    android:checked="false"
                    android:textSize="35dip"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:clickable="true" />

            </RadioGroup>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:weightSum="1"
            android:alwaysDrawnWithCache="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="悬挂模式："
                android:id="@+id/textView8"
                android:layout_gravity="center_vertical" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radiogroup2"
                android:baselineAligned="true"
                android:textAlignment="textEnd"
                android:orientation="horizontal" >

                <RadioButton
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:text="舒适"
                    android:id="@+id/radioButton44"
                    android:layout_weight="0.24"
                    android:checked="false"
                    android:textSize="35dip"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:clickable="true" />

                <RadioButton
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:id="@+id/radioButton45"
                    android:layout_weight="0.29"
                    android:checked="false"
                    android:text="正常"
                    android:textSize="35dip"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:clickable="true" />

                <RadioButton
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:text="运动"
                    android:id="@+id/radioButton46"
                    android:layout_weight="0.28"
                    android:checked="false"
                    android:textSize="35dip"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:clickable="true" />
            </RadioGroup>
        </TableRow>

        <Button
            android:layout_width="153dp"
            android:layout_height="85dp"
            android:text="保存"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="30dp"
            android:layout_marginBottom="20dp" />

    </FrameLayout>

</FrameLayout>
